---
interface Crumb {
  label: string;
  href?: string;
}

interface Props {
  crumbs: Crumb[];
}

const { crumbs } = Astro.props;
---

<nav aria-label="Breadcrumb" class="text-sm text-gray-500 dark:text-gray-400">
  <ol class="flex items-center gap-1.5">
    <li>
      <a href="/" class="hover:text-gray-900 dark:hover:text-gray-100 transition-colors">Home</a>
    </li>
    {crumbs.map((crumb) => (
      <li class="flex items-center gap-1.5">
        <svg class="h-4 w-4 text-gray-400 dark:text-gray-500" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M9 5l7 7-7 7" />
        </svg>
        {crumb.href ? (
          <a href={crumb.href} class="hover:text-gray-900 dark:hover:text-gray-100 transition-colors">{crumb.label}</a>
        ) : (
          <span class="text-gray-900 dark:text-gray-100 font-medium">{crumb.label}</span>
        )}
      </li>
    ))}
  </ol>
</nav>
