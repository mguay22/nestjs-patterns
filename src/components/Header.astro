---
const pathname = Astro.url.pathname;

const navLinks = [
  { href: '/patterns/', label: 'All Patterns' },
  { href: '/patterns/creational/', label: 'Creational' },
  { href: '/patterns/structural/', label: 'Structural' },
  { href: '/patterns/behavioral/', label: 'Behavioral' },
  { href: '/about/', label: 'About' },
];
---

<header class="sticky top-0 z-50 border-b border-gray-200 dark:border-gray-800 bg-white/95 dark:bg-gray-950/95 backdrop-blur-sm">
  <nav class="mx-auto flex max-w-6xl items-center justify-between px-4 py-3 sm:px-6">
    <a href="/" class="flex items-center gap-2.5 text-lg font-bold text-gray-900 dark:text-gray-100 hover:text-accent transition-colors">
      <svg class="h-7 w-7" viewBox="0 0 32 32" fill="none">
        <rect width="32" height="32" rx="6" fill="#6366F1" />
        <text x="16" y="22" text-anchor="middle" font-family="Arial, sans-serif" font-weight="bold" font-size="16" fill="white">DP</text>
      </svg>
      <span class="hidden sm:inline">NestJS Patterns</span>
    </a>

    <div class="flex items-center gap-2">
      <!-- Desktop nav -->
      <ul class="hidden md:flex items-center gap-1 text-sm font-medium">
        {navLinks.map(({ href, label }) => (
          <li>
            <a
              href={href}
              class:list={[
                'rounded-md px-3 py-1.5 transition-colors',
                pathname.startsWith(href)
                  ? 'bg-accent/10 text-accent'
                  : 'text-gray-600 dark:text-gray-400 hover:bg-gray-100 dark:hover:bg-gray-800 hover:text-gray-900 dark:hover:text-gray-100',
              ]}
            >
              {label}
            </a>
          </li>
        ))}
        <li>
          <a
            href="https://michaelguay.dev"
            target="_blank"
            rel="noopener noreferrer"
            class="rounded-md px-3 py-1.5 transition-colors text-gray-600 dark:text-gray-400 hover:bg-gray-100 dark:hover:bg-gray-800 hover:text-gray-900 dark:hover:text-gray-100 inline-flex items-center gap-1"
          >
            michaelguay.dev
            <svg class="h-3 w-3" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 6H5.25A2.25 2.25 0 003 8.25v10.5A2.25 2.25 0 005.25 21h10.5A2.25 2.25 0 0018 18.75V10.5m-10.5 6L21 3m0 0h-5.25M21 3v5.25" />
            </svg>
          </a>
        </li>
      </ul>

      <!-- Theme toggle -->
      <button
        id="theme-toggle"
        class="rounded-md p-2 text-gray-600 dark:text-gray-400 hover:bg-gray-100 dark:hover:bg-gray-800 hover:text-gray-900 dark:hover:text-gray-100 transition-colors cursor-pointer"
        aria-label="Toggle dark mode"
      >
        <!-- Sun icon (shown in dark mode) -->
        <svg id="icon-sun" class="h-5 w-5 hidden" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M12 3v2.25m6.364.386l-1.591 1.591M21 12h-2.25m-.386 6.364l-1.591-1.591M12 18.75V21m-4.773-4.227l-1.591 1.591M5.25 12H3m4.227-4.773L5.636 5.636M15.75 12a3.75 3.75 0 11-7.5 0 3.75 3.75 0 017.5 0z" />
        </svg>
        <!-- Moon icon (shown in light mode) -->
        <svg id="icon-moon" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M21.752 15.002A9.718 9.718 0 0118 15.75c-5.385 0-9.75-4.365-9.75-9.75 0-1.33.266-2.597.748-3.752A9.753 9.753 0 003 11.25C3 16.635 7.365 21 12.75 21a9.753 9.753 0 009.002-5.998z" />
        </svg>
      </button>

      <!-- Mobile hamburger -->
      <button
        id="mobile-menu-toggle"
        class="md:hidden rounded-md p-2 text-gray-600 dark:text-gray-400 hover:bg-gray-100 dark:hover:bg-gray-800 transition-colors cursor-pointer"
        aria-label="Toggle menu"
      >
        <svg id="icon-menu" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5" />
        </svg>
        <svg id="icon-close" class="h-5 w-5 hidden" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
        </svg>
      </button>
    </div>
  </nav>

  <!-- Mobile nav dropdown -->
  <div id="mobile-menu" class="hidden md:hidden border-t border-gray-200 dark:border-gray-800 bg-white dark:bg-gray-950">
    <ul class="px-4 py-3 space-y-1 text-sm font-medium">
      {navLinks.map(({ href, label }) => (
        <li>
          <a
            href={href}
            class:list={[
              'block rounded-md px-3 py-2 transition-colors',
              pathname.startsWith(href)
                ? 'bg-accent/10 text-accent'
                : 'text-gray-600 dark:text-gray-400 hover:bg-gray-100 dark:hover:bg-gray-800 hover:text-gray-900 dark:hover:text-gray-100',
            ]}
          >
            {label}
          </a>
        </li>
      ))}
      <li>
        <a
          href="https://michaelguay.dev"
          target="_blank"
          rel="noopener noreferrer"
          class="flex items-center gap-1 rounded-md px-3 py-2 transition-colors text-gray-600 dark:text-gray-400 hover:bg-gray-100 dark:hover:bg-gray-800 hover:text-gray-900 dark:hover:text-gray-100"
        >
          michaelguay.dev
          <svg class="h-3 w-3" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 6H5.25A2.25 2.25 0 003 8.25v10.5A2.25 2.25 0 005.25 21h10.5A2.25 2.25 0 0018 18.75V10.5m-10.5 6L21 3m0 0h-5.25M21 3v5.25" />
          </svg>
        </a>
      </li>
    </ul>
  </div>
</header>

<script is:inline>
  // Theme toggle
  const toggle = document.getElementById('theme-toggle');
  const iconSun = document.getElementById('icon-sun');
  const iconMoon = document.getElementById('icon-moon');

  function updateIcons() {
    const isDark = document.documentElement.classList.contains('dark');
    iconSun.classList.toggle('hidden', !isDark);
    iconMoon.classList.toggle('hidden', isDark);
  }

  updateIcons();

  toggle.addEventListener('click', () => {
    const isDark = document.documentElement.classList.toggle('dark');
    localStorage.setItem('theme', isDark ? 'dark' : 'light');
    updateIcons();
  });

  // Mobile menu toggle
  const menuToggle = document.getElementById('mobile-menu-toggle');
  const mobileMenu = document.getElementById('mobile-menu');
  const iconMenuOpen = document.getElementById('icon-menu');
  const iconMenuClose = document.getElementById('icon-close');

  menuToggle.addEventListener('click', () => {
    const isOpen = mobileMenu.classList.toggle('hidden');
    iconMenuOpen.classList.toggle('hidden', !isOpen);
    iconMenuClose.classList.toggle('hidden', isOpen);
  });
</script>
