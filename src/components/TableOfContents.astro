---
interface TocItem {
  label: string;
  href: string;
}

interface Props {
  items: TocItem[];
}

const { items } = Astro.props;
---

<nav class="hidden xl:block" aria-label="Table of Contents">
  <div class="sticky top-24">
    <p class="text-xs font-semibold uppercase tracking-wider text-gray-400">On this page</p>
    <ul class="mt-3 space-y-2 border-l border-gray-200 text-sm">
      {items.map((item) => (
        <li>
          <a
            href={item.href}
            class="-ml-px border-l-2 border-transparent pl-4 text-gray-500 transition-colors hover:border-accent hover:text-gray-900"
          >
            {item.label}
          </a>
        </li>
      ))}
    </ul>
  </div>
</nav>
